<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inputEndFragment"
    >
    <fragment
        android:id="@+id/inputEndFragment"
        android:name="eywa.projectcodex.ui.InputEndFragment"
        android:label="activity_add_end"
        tools:layout="@layout/fragment_input_end"
        >
        <action
            android:id="@+id/actionInputEndFragmentToScorePadFragment"
            app:destination="@id/scorePadFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/scorePadFragment"
        android:name="eywa.projectcodex.ui.ScorePadFragment"
        android:label="activity_view_scores"
        tools:layout="@layout/fragment_scorepad"
        >
        <argument
            android:name="endSize"
            app:argType="integer"
            />
    </fragment>
</navigation>