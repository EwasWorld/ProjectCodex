    <!-- Main screen help -->
    <string name="help_sight_marks__diagram_title">Sight marks</string>
    <string name="help_sight_marks__diagram_body">Shows recorded sight marks for different distances on a diagram that represents the sight bar on the bow. White sight marks are \'marked\', faded sight marks are \'archived\', those with a note icon have a note attached. Click on a sight mark to view and edit this information.</string>
    <string name="help_sight_marks__add_title">Add</string>
    <string name="help_sight_marks__add_body">Click here to add a new sight mark</string>
    <string name="help_sight_marks__options_title">Options</string>
    <string name="help_sight_marks__options_body">Flip the scale on the diagram or archive all sight marks (might want to do this when a piece of equipment changes which may affect sight marks)</string>

