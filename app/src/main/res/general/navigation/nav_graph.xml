<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewScoresFragment"
    >
    <fragment
        android:id="@+id/viewScoresFragment"
        android:name="eywa.projectcodex.components.viewScores.ViewScoresFragment"
        android:label="fragment_view_scores"
        >
        <action
            android:id="@+id/action_viewScoresFragment_to_newScoreFragment"
            app:destination="@id/newScoreFragment"
            />
        <action
            android:id="@+id/action_viewScoresFragment_to_emailFragment"
            app:destination="@id/emailFragment"
            />
        <action
            android:id="@+id/action_viewScoresFragment_to_archerRoundFragment"
            app:destination="@id/archerRoundFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/newScoreFragment"
        android:name="eywa.projectcodex.components.newScore.NewScoreFragment"
        android:label="fragment_new_score"
        >
        <argument
            android:name="archerRoundId"
            android:defaultValue="-1"
            app:argType="integer"
            />
        <action
            android:id="@+id/action_newScoreFragment_to_archerRoundFragment"
            app:destination="@id/archerRoundFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/archerRoundFragment"
        android:name="eywa.projectcodex.components.archerRoundScore.ArcherRoundFragment"
        android:label="fragment_archer_round"
        >
        <argument
            android:name="archerRoundId"
            app:argType="integer"
            />
        <argument
            android:name="screen"
            app:argType="string"
            />
    </fragment>
    <fragment
        android:id="@+id/emailFragment"
        android:name="eywa.projectcodex.components.viewScores.emailScores.EmailScoresFragment"
        android:label="fragment_about"
        >
        <argument
            android:name="archerRoundId"
            android:defaultValue="-1"
            app:argType="integer"
            />
    </fragment>
</navigation>
