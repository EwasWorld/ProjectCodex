<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".components.about.AboutFragment"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/text_box_margins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <eywa.projectcodex.components.customViews.LabelledTextView
            android:id="@+id/text_archer_round_stats__date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:label="@string/archer_round_stats__date"
            android:paddingTop="0dp"
            />

        <eywa.projectcodex.components.customViews.LabelledTextView
            android:id="@+id/text_archer_round_stats__round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:label="@string/archer_round_stats__round"
            android:paddingTop="0dp"
            />

        <eywa.projectcodex.components.customViews.LabelledTextView
            android:id="@+id/text_archer_round_stats__hits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/text_box_margins"
            app:label="@string/archer_round_stats__hits"
            app:text="@string/placeholder_0"
            />

        <eywa.projectcodex.components.customViews.LabelledTextView
            android:id="@+id/text_archer_round_stats__score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            app:label="@string/archer_round_stats__score"
            app:text="@string/placeholder_0"
            />

        <eywa.projectcodex.components.customViews.LabelledTextView
            android:id="@+id/text_archer_round_stats__golds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            app:label="@string/archer_round_stats__golds"
            app:text="@string/placeholder_0"
            />

        <eywa.projectcodex.components.customViews.LabelledTextView
            android:id="@+id/text_archer_round_stats__remaining_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:label="@string/archer_round_stats__remaining_arrows"
            android:paddingTop="@dimen/text_box_margins"
            />

        <eywa.projectcodex.components.customViews.LabelledTextView
            android:id="@+id/text_archer_round_stats__handicap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:label="@string/archer_round_stats__handicap"
            app:text="@string/placeholder_0"
            android:paddingTop="0dp"
            android:visibility="gone"
            />

        <eywa.projectcodex.components.customViews.LabelledTextView
            android:id="@+id/text_archer_round_stats__predicted_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:label="@string/archer_round_stats__predicted_score"
            android:visibility="gone"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>