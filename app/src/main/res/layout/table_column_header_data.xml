<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/column_header_container"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/scorepad__cell_height"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/text_scorepad_column_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/scorepad__cell_margins"
        android:layout_marginEnd="@dimen/scorepad__cell_margins"
        android:gravity="center"
        android:paddingLeft="@dimen/scorepad__padding"
        android:paddingRight="@dimen/scorepad__padding"
        android:textColor="@color/scorepadText"
        android:textSize="@dimen/scorepad__text_size"
        tools:text="Header Data"
        />
</LinearLayout>