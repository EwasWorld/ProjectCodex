<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/column_header_container"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/info_table__cell_height"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/text_info_table_column_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/info_table__cell_margins"
        android:layout_marginEnd="@dimen/info_table__cell_margins"
        android:gravity="center"
        android:paddingLeft="@dimen/info_table__padding"
        android:paddingRight="@dimen/info_table__padding"
        android:textColor="@color/scorePadText"
        android:textSize="@dimen/info_table__text_size"
        tools:text="Header Data"
        />
</LinearLayout>