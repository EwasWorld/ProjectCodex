<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_info_table_cell_container"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/info_table__cell_height"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/text_info_table_cell_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/info_table__cell_margins"
        android:layout_marginEnd="@dimen/info_table__cell_margins"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/info_table__padding"
        android:paddingRight="@dimen/info_table__padding"
        android:text="@string/app_name"
        android:textColor="@color/scorePadText"
        android:textSize="@dimen/info_table__text_size"
        />
</LinearLayout>