<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    android:layout_margin="@dimen/view_scores__item_margin"
    android:background="@color/colorLightAccent"
    >

    <LinearLayout
        android:id="@+id/layout_vs_round_item__main_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/layout_vs_round_item__calculations"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/text_vs_round_item__date"
            style="@style/ViewScoresSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="@sample/date_time.json/data/dateTime"
            android:gravity="start"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/text_vs_round_item__round"
            style="@style/ViewScoresLargeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="@sample/round_names"
            app:layout_constraintWidth_max="wrap"
            android:gravity="start"
            android:ellipsize="end"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_vs_round_item__calculations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_vs_round_item__main_info"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/label_vs_round_item__hsg"
            style="@style/ViewScoresSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="@string/view_round__hsg"
            app:layout_constraintEnd_toEndOf="@+id/text_vs_round_item__hsg"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/text_vs_round_item__hsg"
            style="@style/ViewScoresLargeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@sample/hits_score_golds"
            app:layout_constraintEnd_toStartOf="@+id/text_vs_round_item__handicap"
            app:layout_constraintTop_toBottomOf="@+id/label_vs_round_item__hsg"
            />

        <TextView
            android:id="@+id/label_vs_round_item__handicap"
            style="@style/ViewScoresSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_round__handicap"
            app:layout_constraintEnd_toEndOf="@+id/text_vs_round_item__handicap"
            app:layout_constraintStart_toStartOf="@+id/text_vs_round_item__handicap"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/text_vs_round_item__handicap"
            style="@style/ViewScoresLargeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@sample/handicaps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_vs_round_item__handicap"
            android:minEms="2"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>