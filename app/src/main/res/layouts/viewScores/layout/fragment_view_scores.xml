<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".components.viewScores.ViewScoresFragment"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_scores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/view_scores_round_item"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_scores__icon_bar_height"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginBottom="@dimen/medium_margins"
        android:background="@drawable/icon_bar_rounded_corners"
        android:paddingHorizontal="@dimen/small_margins"
        >

        <ImageButton
            android:id="@+id/button_view_scores__start_multi_select"
            android:layout_width="@dimen/view_scores__icon_bar_icon"
            android:layout_height="@dimen/view_scores__icon_bar_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_select_all_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@null"
            android:contentDescription="@string/view_scores_menu__multi_select"
            tools:visibility="gone"
            />

        <TextView
            android:id="@+id/label_view_scores__multi_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/extra_small_margins"
            android:paddingHorizontal="@dimen/extra_small_margins"
            android:text="@string/view_scores_menu__multi_select"
            style="@style/GeneralText"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <ImageButton
            android:id="@+id/button_view_scores__select_all_or_none"
            android:layout_width="@dimen/view_scores__icon_bar_icon"
            android:layout_height="@dimen/view_scores__icon_bar_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_select_all_icon"
            android:background="@null"
            android:contentDescription="@string/view_scores_menu__multi_select_all_or_none"
            android:layout_marginHorizontal="@dimen/extra_small_margins"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <ImageButton
            android:id="@+id/button_view_scores__selection_action"
            android:layout_width="@dimen/view_scores__icon_bar_icon"
            android:layout_height="@dimen/view_scores__icon_bar_icon"
            android:layout_marginHorizontal="@dimen/extra_small_margins"
            android:background="@null"
            android:contentDescription="@string/view_scores_menu__multi_select_next"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_email_icon"
            android:visibility="gone"
            tools:ignore="RedundantDescriptionCheck"
            tools:visibility="visible"
            />

        <ImageButton
            android:id="@+id/button_view_scores__cancel_selection"
            android:layout_width="@dimen/view_scores__icon_bar_icon"
            android:layout_height="@dimen/view_scores__icon_bar_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_icon"
            android:background="@null"
            android:layout_marginHorizontal="@dimen/extra_small_margins"
            android:contentDescription="@string/view_scores_menu__multi_select_cancel"
            android:visibility="gone"
            tools:visibility="visible"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>