<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".components.viewScores.emailScores.EmailScoresFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small_margins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <EditText
            android:id="@+id/input_text_email_scores__to"
            style="@style/UserInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_scores__item_margin"
            android:ems="10"
            android:hint="@string/email_scores__to"
            android:inputType="textEmailAddress"
            android:padding="@dimen/small_margins"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints="emailAddress"
            />

        <EditText
            android:id="@+id/input_text_email_scores__subject"
            style="@style/UserInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_scores__item_margin"
            android:ems="10"
            android:hint="@string/email_scores__subject"
            android:inputType="textEmailSubject"
            android:padding="@dimen/small_margins"
            android:text="@string/email_default_message_subject"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintBottom_toTopOf="@+id/scroll_view_email_scores"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_text_email_scores__to"
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:importantForAutofill="no"
            />

        <ScrollView
            android:id="@+id/scroll_view_email_scores"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/input_text_email_scores__subject"
            app:layout_constraintBottom_toTopOf="@id/check_box_email_scores__attach_full"
            android:layout_margin="@dimen/view_scores__item_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/edit_text_rounded_corners"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/check_box_email_scores__attach_full"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_text_email_scores__subject"
                >

                <EditText
                    android:id="@+id/input_text_email_scores__message_start"
                    style="@style/UserInputText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/view_scores__item_margin"
                    android:hint="@string/email_scores__message"
                    android:inputType="textMultiLine"
                    android:text="@string/email_default_message_header"
                    android:textSize="@dimen/small_text_size"
                    app:layout_constraintBottom_toTopOf="@+id/text_email_scores__message_scores"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextFields"
                    android:importantForAutofill="no"
                    />

                <TextView
                    android:id="@+id/text_email_scores__message_scores"
                    style="@style/UserInputText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margins"
                    android:background="@drawable/edit_text_rounded_corners"
                    android:backgroundTint="@color/colorPrimaryLight"
                    android:textSize="@dimen/small_text_size"
                    app:layout_constraintBottom_toTopOf="@+id/input_text_email_scores__message_end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.476"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_text_email_scores__message_start"
                    tools:ignore="TextFields"
                    tools:text="@string/email_round_summary_sample_text"
                    />

                <EditText
                    android:id="@+id/input_text_email_scores__message_end"
                    style="@style/UserInputText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/view_scores__item_margin"
                    android:layout_marginBottom="140dp"
                    android:hint="@string/email_scores__message"
                    android:inputType="textMultiLine"
                    android:text="@string/email_default_message_footer"
                    android:textSize="@dimen/small_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_email_scores__message_scores"
                    tools:ignore="TextFields"
                    android:importantForAutofill="no"
                    />

                <ImageButton
                    android:id="@+id/button_email_scores__edit_scores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:alpha="0.7"
                    android:src="@drawable/ic_edit_icon_black"
                    app:layout_constraintEnd_toEndOf="@+id/text_email_scores__message_scores"
                    app:layout_constraintTop_toTopOf="@+id/text_email_scores__message_scores"
                    android:layout_margin="@dimen/small_margins"
                    android:contentDescription="@string/email_scores__edit_icon_description"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <CheckBox
            android:id="@+id/check_box_email_scores__attach_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/email_scores__full_score_sheet_as_attachment"
            app:layout_constraintBottom_toTopOf="@+id/button_email_scores__send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scroll_view_email_scores"
            />

        <Button
            android:id="@+id/button_email_scores__send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_scores__send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>