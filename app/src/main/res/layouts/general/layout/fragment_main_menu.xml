<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".components.mainMenu.MainMenuFragment"
    >

    <Button
        android:id="@+id/button_main_menu__start_new_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu__new_score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button_main_menu__view_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu__view_scores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_main_menu__start_new_score"
        />
</androidx.constraintlayout.widget.ConstraintLayout>