<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".components.archerRoundScore.inputEnd.subFragments.ArrowInputsFragment"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_arrow_inputs__score_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="
            button_arrow_inputs__score_0,
            button_arrow_inputs__score_1,
            button_arrow_inputs__score_3,
            button_arrow_inputs__score_5,
            button_arrow_inputs__score_7,
            button_arrow_inputs__score_9,
            "
            />

        <Button
            android:id="@+id/button_arrow_inputs__score_0"
            style="@style/InputArrowScoreButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/targetFaceGreen"
            android:text="@string/arrow_value_m"
            />

        <Button
            android:id="@+id/button_arrow_inputs__score_1"
            style="@style/InputArrowScoreButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/targetFaceWhite"
            android:text="@string/arrow_value_1"
            />

        <Button
            android:id="@+id/button_arrow_inputs__score_3"
            style="@style/InputArrowScoreButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/targetFaceBlack"
            android:text="@string/arrow_value_3"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/button_arrow_inputs__score_5"
            style="@style/InputArrowScoreButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/targetFaceBlue"
            android:text="@string/arrow_value_5"
            />

        <Button
            android:id="@+id/button_arrow_inputs__score_7"
            style="@style/InputArrowScoreButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/targetFaceRed"
            android:text="@string/arrow_value_7"
            />

        <Button
            android:id="@+id/button_arrow_inputs__score_9"
            style="@style/InputArrowScoreButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/targetFaceGold"
            android:text="@string/arrow_value_9"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>