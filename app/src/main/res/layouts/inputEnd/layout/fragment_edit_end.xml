<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".components.inputEnd.EditEndFragment"
    >

    <LinearLayout
        android:id="@+id/layout_edit_end__info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/layout_edit_end__end_inputs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        >

        <!-- Placeholder text -->
        <TextView
            android:id="@+id/text_edit_end__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editing end 12"
            android:textColor="@color/inputEndText"
            android:textSize="@dimen/medium_text_size"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_edit_end__end_inputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/layout_edit_end__finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_edit_end__end_inputs"
            android:name="eywa.projectcodex.components.inputEnd.subFragments.EndInputsFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            />

        <!-- TODO Remove quick preview when Android Studio 4.2 is available (FragmentContainerView will show up in preview). Cannot be uncommented as it can cause id clashes -->
        <!--<fragment
            android:id="@+id/fragment_edit_end__end_inputs_preview"
            android:name="eywa.projectcodex.components.inputEnd.subFragments.EndInputsFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            tools:layout="@layout/frag_end_inputs"
            />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_edit_end__finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:id="@+id/button_edit_end__cancel"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general_cancel"
            />

        <Button
            android:id="@+id/button_edit_end__complete"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general_complete"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>